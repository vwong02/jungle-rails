<article>
  <%= link_to product_path(product) do %>
  <%= image_tag product.image.thumb.url , alt: product.name %>
  <h1>
    <span><%= product.name %></span>
    <span><%= humanized_money_with_symbol product.price %></span>
  </h1>
  <% end%>
  <div>

    <% disabled = product.quantity <= 0 %>
    <% if disabled %>
    <span class="badge bg-danger d-flex align-items-center">Sold Out</span>
    <% end %>

    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn add-to-cart-btn', disabled: disabled, method: :post do %>
    <%= fa_icon "shopping-cart", text: 'Add' %>
    <% end %>

  </div>
</article>